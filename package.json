{
  "name": "poe-system-api",
  "version": "1.0.0",
  "description": "This project will be responsable for the login system and helpers",
  "main": "index.js",
  "repository": "git@github.com:Programacao-Orientada-a-Estagiario-POE/poe-system-api.git",
  "author": "Bruno Alencar <joaobrunoalencar@gmail.com>",
  "license": "MIT",
  "private": false,
  "scripts": {
    "test": "yarn run test:unit && yarn run test:int",
    "test:unit": "jest --config ./jest/jest.config.js --detectOpenHandles",
    "test:int": "jest --runInBand --forceExit --config ./jest/jest.int-config.js --detectOpenHandles",
    "test:int:watch": "yarn run test:int -- --watch -- --inspect=0.0.0.0:7001",
    "test:int:coverage": "jest --coverage --runInBand --forceExit --config ./jest/jest.int-config.js --detectOpenHandles",
    "dev": "ts-node-dev src/server.ts",
    "dev:debug": "ts-node-dev --inspect=0.0.0.0:7001 --exit-child --respawn src/server.ts",
    "start": "node dist/src/server.js",
    "build": "tsc -p .;yarn run copy-essentials",
    "clean": "rm -rf dist",
    "copy-essentials": "mkdir -p dist/src/contracts && cp src/contracts/*.yaml dist/src/contracts",
    "release": "yarn run semantic-release",
    "pipeline:build": "yarn run clean; tsc -p .;yarn run copy-essentials",
    "lint": "eslint . --ext .ts"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^10.0.0",
    "express": "^4.17.1",
    "express-openapi-validator": "^4.11.0",
    "js-yaml": "^4.0.0",
    "jsonwebtoken": "^8.5.1",
    "lodash": "^4.17.21",
    "mongoose": "^6.0.2",
    "supertest": "^6.1.6",
    "swagger-ui-express": "^4.1.6",
    "ts-node": "^9.1.1",
    "uuid": "^8.3.2"
  },
  "devDependencies": {
    "@commitlint/cli": "^12.1.1",
    "@commitlint/config-conventional": "^12.1.1",
    "@semantic-release/changelog": "^5.0.1",
    "@semantic-release/commit-analyzer": "^8.0.1",
    "@semantic-release/git": "^9.0.0",
    "@semantic-release/release-notes-generator": "^9.0.2",
    "@types/cors": "^2.8.12",
    "@types/express": "^4.17.11",
    "@types/jest": "^26.0.23",
    "@types/js-yaml": "^4.0.0",
    "@types/jsonwebtoken": "^8.5.6",
    "@types/lodash": "^4.14.178",
    "@types/node": "^16.11.6",
    "@types/supertest": "^2.0.11",
    "@types/swagger-ui-express": "^4.1.2",
    "@types/uuid": "^8.3.0",
    "@typescript-eslint/eslint-plugin": "^5.9.1",
    "@typescript-eslint/parser": "^5.9.1",
    "eslint": "^8.0.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-airbnb-typescript": "^16.1.0",
    "eslint-plugin-boundaries": "^2.8.0",
    "eslint-plugin-import": "^2.25.4",
    "jest": "^26.6.3",
    "lint-staged": "^10.2.4",
    "mongodb-memory-server": "^7.3.6",
    "semantic-release": "^17.4.2",
    "ts-jest": "^26.5.6",
    "ts-node-dev": "^1.1.6",
    "typescript": "^4.5.4"
  },
  "lint-staged": {
    "*.ts": [
      "yarn lint"
    ]
  }
}
